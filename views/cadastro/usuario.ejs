  <main class="container-md bg-danger pm-5" style=" padding: 0px;">
    <!--  -->
    <!--  -->

    <div class="row">
        <form method="post" action="/cadastrarUsuario" class="col col-10 border border-secondary p-4 bg-light mx-auto my-4">
          
            <h1>Cadastro para novo Usuário</h1>
            <div class="form-floating m-2">
                <input type="text" name="nomeUsuario" id="FloatingName" class="form-control" placeholder="Nome completo" value="<%=nome%>" required>
                <label for="FloatingName">Nome completo</label>
            </div>


            <div class="form-floating m-2">
                <input type="email" name="emailUsuario" id="FloatingEmail" class="form-control" placeholder="Email" value="<%=email%>"required >
                <label for="FloatingEmail">Email</label>
            </div>

            <div class="form-floating m-2 " >
                <input type="text" name="telefoneUsuario" id="FloatingTel" class="form-control" placeholder="Telefone" maxlength="15" value="<%=telefone%>" required >
                <label for="FloatingTel">Telefone</label>
            </div>

            <div class="row">
                <div class="form-floating  p-1 col">
                    <input type="password" name="senhaUsuario" id="FloatingPassword" class="form-control" placeholder="Senha" autocomplete="off" minlength="6" required>
                    <label for="FloatingPassword">Senha</label>
                </div>
                <div class="form-floating  p-1 col">
                    <input type="password" name="confirmaSenha" id="FloatingConfirmPassword" class="form-control" placeholder="Confirme Senha" autocomplete="off" minlength="6" required>
                    <label for="FloatingConfirmPassword">Confirme Senha</label>
                </div>
          
                <%if(i==1){%>
                <span class="alert alert-danger">
                    Senhas diferentes !
                </span>
                <%}%>
                <div class="form-check mb-3">
                    <input type="checkbox" name="" id="ocultarSenha" class="form-check-input">
                    <label for="ocultarSenha" class="form-check-label">Mostrar Senha</label>
                </div>
            </div>

            <div class="mb-3">
                <label for="formFile" class="form-label">Selecione uma foto do local</label>
                <input type="file" name="fotoUsuario" id="formFile" class="form-control">
            </div>

            <div class="row">
                <input type="submit" value="Cadastrar" class="btn btn-outline-primary m-2 p-2 col col-4">
                <a href="/" class="btn btn-outline-danger m-2 p-2 col col-2">Cancelar</a>
            </div>
        </form>
      
    </div>

    <!--  -->
    <!--  -->
</main>


    <script src="js/mascara.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
