          <form action="/alterarEmailConfirm" method="post" class="w-75 mx-auto my-5 border p-4">
            <h2>Alterar Email</h2>

            <div class="form-floating mb-3">
                <input type="text" class="form-control border border-success" id="emailAtual" name="emailAtual" placeholder="Email Atual" value="<%=emailAtual%>" readonly>
                <label for="emailAtual" class="text-success">Email Atual</label>
              </div>
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="emailNovo" name="emailNovo" placeholder="Email novo">
                <label for="emailNovo">Email novo</label>
              </div>

              <div class="form-floating mb-3">
                <input type="password" class="form-control" name="senha" id="FloatingPassword" placeholder="Coloque sua senha" required minlength="6"> 
                <label for="FloatingPassword">Coloque sua senha</label>
              </div>
              <div class="form-check mb-3">
                <input type="checkbox" name="" id="ocultarSenha" class="form-check-input">
                <label for="ocultarSenha" class="form-check-label">Mostrar Senha</label>
              </div>
              <div class="alert <%if(msg.length > 0){%> alert-danger text-center<%}%>">
                <%=msg%>
              </div>

              <input type="submit" value="Alterar" class="btn btn-primary">
          </form>
          
          <script src="js/ocultar.js"></script>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
