<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>NPR - Perfil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="shortcut icon" href="img/icons/favicon.png" type="image/x-icon">
    <!-- <link rel="stylesheet" href="css/style.css"> -->
    <link rel="stylesheet" href="scss/perfil.css">
    <link rel="stylesheet" href="css/index.css">
  </head>
  <body>
    <!--BARRA DE NAVEGAÇÃO-->
    <nav class="navbar navbar-expand-lg bg-body-tertiary bg-warning" role="nav"> 
        <div class="container-fluid" role="navigation">
          <a class="navbar-brand" href="/">
            <img src="img/logotipo.svg" alt="Logotipo NPR" width="50" height="50" style="    transform: scale(2.5);
            margin-left: 30px; margin-right: 30px;
        ">
          </a>

          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

              <li class="nav-item">
                <a class="nav-link" href="/" role="link">Home</a>
                <div class="line"></div>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/mapa" role="link">Mapa</a>
                <div class="line"></div>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/login" role="link">Login</a>
                <div class="line"></div>
              </li>

              <li class="nav-item">
                <a class="nav-link" href="/infoPonto" role="link">Pontos de coleta</a>
                <div class="line"></div>
              </li>

            </ul>

          </div>

        </div>

      </nav>

      <main class="container row bg-dandger mt-5 mx-auto p-0" role="main">
        <article class="first__col col col-12 col-md-5"> 
                <div class="profile__picture"><img class="img-fluid img_pic" src="uploads/<%=sendFoto%>" alt=""></div>

                 <h3 class="text-center subtitulo"><%=sendNome%></h3>
                 <h5 class="text-center opacity-75 subtitulo">Usuario comum</h5>
<!--
                <ul class="list-group list-group-flush mb-3">
                    <li class="list-group-item">Email : <%=sendEmail%></li>


                    <li class="list-group-item">Telefone : <%=sendTel%> </li>

                </ul> -->
        </article>
        <aside class="second__col col p-0">
          <header class="bg-daner w-100" style="height: 80px;">
            <h2 class="text-center pt-3">Seus dados</h2>
          </header>
          <form action="/alterarEmail" method="post" class="alt_data  px-3 py-2  row w-100 m-auto">

            <div class="mb-3 col">
              <label for="exampleInputEmail1" class="form-label">Email</label>
              <input type="email" class="form-control" id="exampleInputEmail1" name="emailAtual" value="<%=sendEmail%>" readonly>
              <div id="emailHelp" class="form-text">Muita atenção e cuidado ao alterar seu Email</div>
            </div>

            <div class="mb-3 col" style="margin-top: 30px;"><input type="submit" value="Alterar" class="btn btn-primary"></div>
          </form>

          <form action="/alterarTelefone" method="post" class="alt_data bg-whte px-3 py-2 row w-100 m-auto">
            <div class="mb-3 col">
              <label for="exampleInputTel" class="form-label">Telefone</label>
              <input type="text" name="telefoneAtual" id="exampleInputTel" class="form-control" value="<%=sendTel%>">
            </div>

            <div class="mb-3 col" style="margin-top: 30px;"><input type="submit" value="Alterar" class="btn btn-primary"></div>
          </form>

          <form action="/alterarSenha" method="post" class="alt_data  px-3 py-2 row w-100 m-auto">

            <div class="mb-3 col">
              <label for="exampleInputPassword" class="form-label">Senha</label>
              <input type="password" name="" id="FloatingPassword" value="123456" class="form-control mb-1" value="123456">
              <label for="ocultarSenha"><input type="checkbox" name="ocultarSenha" id="ocultarSenha" class="form-check-input"> Mostrar senha</label>
            </div>

            <div class="mb-3 col" style="margin-top: 24px;">
              <input type="submit" value="Alterar" class="btn btn-warning disabled">
            </div>

          </form>

          <form action="/alterarFoto" method="post" class="alt_data px-3 py-2 row w-100 m-auto">
            <div class="mb-3 col">
              <label for="idFoto">Foto de perfil</label>
              <input type="file" name="" id="idFoto" value="kkkkkk" class="form-control mb-1">
            </div>

            <div class="mb-3 col">
              <input type="submit" value="Alterar" class="btn btn-warning disabled">
            </div>
          </form>
        </aside>
      </main>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="js/ocultar.js"></script>
  </body>
</html>